{
  "kind": "collectionType",
  "collectionName": "dishes",
  "info": {
    "name": "dish"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "restaurant": {
      "model": "restaurant",
      "via": "dishes"
    }
  }
}
